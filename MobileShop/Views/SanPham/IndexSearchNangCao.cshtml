
@{
    ViewBag.Title = "IndexSearchNangCao";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Tìm Kiếm Nâng cao</h2>

@using (Html.BeginForm("TimKiemNangCao", "SanPham", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form" }))
{

    <div @*class="timkiem-group"*@>
        
        <label>Nhà sản xuất : </label><br>
        @Html.DropDownList("MaNhaSanXuat", null, new { @style = "float:left; width: 100px;" })<br><br>

        <label>Loại sản phẩm : </label><br>
        @Html.DropDownList("MaLoaiSanPham", null, new { @style = "float:left; width: 100px;" })<br><br>

        <label>Tên sản phẩm :</label><br>
        <input type="text" class="form-control" placeholder="Tên sản phẩm" name="tensp" value="@ViewBag.tensp" id="tensp">

        <label>Xuất xứ: </label>
        <input type="text" class="form-control" placeholder="xuất xứ..." name="xuatxu" value="@ViewBag.xuatxu" id="xuatxu">

      
      
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
    </div>
}