@model MobileShopConnection.NhaSanXuat

@{
    ViewBag.Title = "Create";
}

<h2>Thêm mới nhà sản xuất</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div >
        <h4>NhaSanXuat</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4 class="control-label col-md-2">Mã nhà sản xuất</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNhaSanXuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNhaSanXuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <h4 class="control-label col-md-2">Tên nhà sản xuất</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhaSanXuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNhaSanXuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 class="control-label col-md-2">Bị khóa</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BiXoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BiXoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
