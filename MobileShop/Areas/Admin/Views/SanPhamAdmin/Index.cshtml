@model PetaPoco.Page<MobileShopConnection.SanPham>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
           Tên sản phẩm
        </th>
        <th @*width="70"*@>
           Mô tả
        </th>
        <th>
            Xuất sứ
        </th>
        <th @*width="80"*@>
           Mã Nhà sản xuất
        </th>
        <th>
           Giá bán
        </th>
       
        <th @*width="50"*@>
           Số lượng
        </th>
        <th @*width="70"*@>
           Số lượng tồn
        </th>
      
        <th>
           Hình ảnh
        </th>
        
        <th @*width="80"*@>Sửa đổi</th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td>
            @Html.Raw(item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XuatXu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNhaSanXuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
      
        
        <td>
            <img src="@item.HinhAnh"/>
        </td>
      
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.MaSanPham }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.MaSanPham  }) |*@
            @Html.ActionLink("Delete", "Delete", new {  id=item.MaSanPham })
        </td>
    </tr>
}

</table>
<ul class="pagination">
    @for (int i = 1; i <= Model.TotalPages; i++)
            {
        <d>@Html.ActionLink("Trang " + i.ToString() + " | ", "Index", new { page = i })</d>
    }
</ul>