@model IEnumerable<MobileShopConnection.LoaiSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý các loại sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Mã loại sản phẩm
        </th>
        <th>
           Tên loại
        </th>
        <th>
          Bị khóa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaLoaiSanPham)
        </td>
